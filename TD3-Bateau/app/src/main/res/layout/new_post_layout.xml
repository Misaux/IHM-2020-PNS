<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/customborder"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/new_post"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <ImageButton
        android:id="@+id/boat_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="105dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#CCCECE"
        android:clickable="true"
        app:srcCompat="@drawable/bateau32x32" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <ImageButton
        android:id="@+id/swimmer_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="105dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#CCCECE"
        android:clickable="true"
        app:srcCompat="@drawable/nageur32x32" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <ImageButton
        android:id="@+id/fish_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="105dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#CCCECE"
        android:clickable="true"
        app:srcCompat="@drawable/poisson32x32" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <ImageButton
        android:id="@+id/thermometre_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="105dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#CCCECE"
        android:clickable="true"
        app:srcCompat="@drawable/temperature32x32" />

    <Space
        android:layout_width="285dp"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/bt_valid"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/valider" />

</LinearLayout>